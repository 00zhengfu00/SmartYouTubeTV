<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:minWidth="@dimen/compound_button_wrapper_width"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/compound_button_wrapper_height"
              android:gravity="center_horizontal"
              android:weightSum="1"
              android:orientation="vertical"
              android:background="@color/transparent"
              android:id="@+id/toggle_button_wrapper"
              android:clickable="true">
    <ImageButton
        android:padding="@dimen/compound_button_padding"
        android:scaleType="fitCenter"
        android:src="@mipmap/btn_like_off"
        android:background="@color/transparent"
        android:layout_width="@dimen/compound_button_width"
        android:layout_height="@dimen/compound_button_height"
        android:id="@+id/image_button"
        android:layout_weight="0.30"
        android:visibility="gone"/>
    <Button
        android:textSize="@dimen/compound_button_text_size"
        android:textColor="@color/white"
        android:background="@color/transparent"
        android:text="Hello World"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/compound_button_height"
        android:visibility="visible"
        android:id="@+id/text_button"/>
    <TextView
        android:textSize="@dimen/compound_button_text_size"
        android:textColor="@color/white"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"/>
</LinearLayout>